@model IEnumerable<DemoProjectLearn.Models.PizzaModel>



@{ ViewData["Title"] = "Index"; }
<div class="card-deck">
    @foreach (var item in Model)
    {
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@item.PName</h3>
            </div>
            <img class="card-img-top" src="~/images/@item.ImageUrl" alt="Pizza Image" height="200px" />
            <div class="card-footer text-center">
                <a asp-controller="Functional" asp-action="PizzaDetails" asp-route-id="@item.Id" class="btn btn-primary">Details</a>
            </div>
        </div>}
</div>