@model DemoProjectLearn.Models.PizzaModel



@{ ViewBag.Title = "Pizza Details"; }



<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h2>@Model.PName</h2>
            </div>



            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/@Model.ImageUrl" />



                <h4>Price : &#8377;@Model.Price</h4>
                <h4>Size: @Model.Size</h4>
                <p>Description : @Model.Description</p>



            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="btn btn-danger">Back</a>
                <a asp-route-id="@Model.Id" asp-action="Payment" class="btn btn-primary">Buy Now</a>
            </div>
        </div>
    </div>
</div>